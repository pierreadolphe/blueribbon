<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_show_sign_in" inherit_id="portal.frontend_layout" name="Show Sign In">
        <xpath expr="//ul[@id='top_menu']" position="inside">
            <t t-call="website.language_selector"/>
        </xpath>
    </template>

    <template id="rb_layout" inherit_id="portal.frontend_layout">
        <xpath expr="//head//title" position="replace">
            <title>BlueRibbon</title>
        </xpath>
    </template>


    <template id="rb_footer_custom" inherit_id="website.footer_custom">
        <xpath expr="//div[@id='footer']" position="inside">
            <div class="modal fade" id="rb-model-popup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span>x</span>
                            </button>
                        </div>
                        <div class="modal-body p-0">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-12 p-5">
                                        <t t-raw="request.env['ir.config_parameter'].sudo().get_param('website_blueribbon.crm_model_form')"/>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-12" style="background: linear-gradient(#C4D8E4, #E5EDF7);">
                                        <form action="/website_form/" method="post" data-model_name="crm.lead" data-success_page="/thank-you" class="s_website_form container-fluid mt32" enctype="multipart/form-data" data-editable-form="false">
                                            <div class="form-group row form-field o_website_form_required_custom">
                                                <label class="col-12 col-form-label" for="contact_name">Your Name</label>
                                                <div class="col-lg-12 col-md-8">
                                                    <input type="text" class="form-control o_website_form_input" name="contact_name" t-att-value="request.params.get('contact_name', '')" required=""/>
                                                </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_required_custom">
                                                <label class="col-12 col-form-label" for="phone">Whatsapp Number</label>
                                                <div class="col-12">
                                                    <input type="text" class="form-control o_website_form_input" name="phone" t-att-value="request.params.get('phone', '')" required=""/>
                                                </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_required_custom">
                                                <label class="col-12 col-form-label" for="partner_name">Company Name</label>
                                                <div class="col-12">
                                                    <input type="text" class="form-control o_website_form_input" name="partner_name" t-att-value="request.params.get('partner_name', '')" required=""/>
                                                </div>
                                            </div>


                                            <div class="form-group row form-field">
                                                <label class="col-12 col-form-label" for="city">District</label>
                                                <div class="col-12">
                                                    <input type="text" class="form-control o_website_form_input" name="city" t-att-value="request.params.get('city', '')" />
                                                </div>
                                            </div>


                                            <div class="form-group row form-field">
                                                <label class="col-12 col-form-label" for="street">Street</label>
                                                <div class="col-12">
                                                    <input type="text" class="form-control o_website_form_input" name="street" t-att-value="request.params.get('street', '')" />
                                                </div>
                                            </div>

                                            <div class="form-group row form-field">
                                                <label class="col-12 col-form-label" for="email_from">Email</label>
                                                <div class="col-12">
                                                    <input type="text" class="form-control o_website_form_input" name="email_from" t-att-value="request.params.get('email_from', '')" />
                                                </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_required">
                                                <label class="col-12 col-form-label" for="name">Select a Service</label>
                                                <div class="col-12">
                                                    <select id="Subject" class="form-control o_website_form_input" name="name" required="">
                                                      <option disabled="disabled" value=""> -- Select An Option -- </option>
                                                      <option value="Management Assistance">Management Assistance</option>
                                                      <option value="Advisory Services" selected="selected">Advisory Services</option>
                                                      <option value="Project Implementation">Project Implementation</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-12">
                                                    <a href="#" role="button" class="btn btn-primary btn-lg o_website_form_send">Schedule a Demo</a>
                                                    <span id="o_website_form_result"></span>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//ul[hasclass('list-unstyled')]" position="replace">
            <ul class="list-unstyled">
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/#services">Our Services</a>
                </li>
                <li>
                    <a href="/#process">Our Process</a>
                </li>
                <li>
                    <a href="/case-study">Case Study</a>
                </li>
                <li>
                    <a href="/terms-and-conditions">Terms &amp; Conditions</a>
                </li>
            </ul>
        </xpath>
    </template>
</odoo>